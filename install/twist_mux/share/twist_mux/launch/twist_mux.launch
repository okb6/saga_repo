<launch>
  <arg name="joy_vel_in"  default="input_joy/cmd_vel"/>
  <arg name="joy_vel_out" default="joy_vel"/>

  <arg name="cmd_vel_out" default="twist_mux/cmd_vel"/>

  <arg name="config_locks"  default="$(find-pkg-share twist_mux)/config/twist_mux_locks.yaml"/>
  <arg name="config_topics" default="$(find-pkg-share twist_mux)/config/twist_mux_topics.yaml"/>

  <arg name="config_joy" default="$(find-pkg-share twist_mux)/config/joystick.yaml"/>

  <node pkg="twist_mux" exec="twist_mux" name="twist_mux" output="screen">
    <remap from="cmd_vel_out" to="$(var cmd_vel_out)"/>

    <param from="$(var config_locks)"/>
    <param from="$(var config_topics)"/>
  </node>

  <node pkg="twist_mux" exec="twist_marker" name="twist_marker">
    <remap from="twist"  to="$(var cmd_vel_out)"/>
    <remap from="marker" to="twist_marker"/>
  </node>

  <node pkg="twist_mux" exec="joystick_relay.py" name="joystick_relay" output="screen">
    <remap from="joy_vel_in"  to="$(var joy_vel_in)"/>
    <remap from="joy_vel_out" to="$(var joy_vel_out)"/>

    <param file="$(var config_joy)"/>
  </node>
</launch>

